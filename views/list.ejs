<%- include('header') -%>

    <body>
        <main>
            <div class="container">
                <div class="box" id="heading">
                    <h1>
                        <%=ListName %>
                    </h1>

                </div>
                <div class="box">
                    <% newListItems.forEach((element)=> { %>
                        <form action="/options" method="post">
                            <div class="item">
                                <input type="checkbox" name="checkBox">
                                <p>
                                <div class="para">
                                    <%= element.name %>
                                </div>
                                <div class="icons"> <button class="options delete" type="submit" name="delete"
                                        value="<%=element._id%>">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960"
                                            width="48" class="svg delete">
                                            <path
                                                d="M261-120q-24.75 0-42.375-17.625T201-180v-570h-41v-60h188v-30h264v30h188v60h-41v570q0 24-18 42t-42 18H261Zm438-630H261v570h438v-570ZM367-266h60v-399h-60v399Zm166 0h60v-399h-60v399ZM261-750v570-570Z" />
                                        </svg>
                                    </button>
                                    <input type="hidden" name="ListName" value="<%=ListName %>">
                        </form>
                        <form action="/edit" method="post">
                            <button class="options edit" name="edit" value="<%=element._id%>">
                                <svg xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960" width="48"
                                    class="svg edit">
                                    <path
                                        d="M180-180h44l443-443-44-44-443 443v44Zm614-486L666-794l42-42q17-17 42-17t42 17l44 44q17 17 17 42t-17 42l-42 42Zm-42 42L248-120H120v-128l504-504 128 128Zm-107-21-22-22 44 44-22-22Z" />
                                </svg>
                            </button>
                            <input type="text" name="NewListItem" class="editInput hide" placeholder="edit">
                            <button class="options hide done" type="submit"><svg class="svg"
                                    xmlns="http://www.w3.org/2000/svg" height="48" viewBox="0 -960 960 960" width="48">
                                    <path d="M378-246 154-470l43-43 181 181 384-384 43 43-427 427Z" />
                                </svg></button>
                        </form>
                </div>
                </p>
            </div>

            <% }) %>

                <div class="form item">
                    <form action="/" method="post">
                        <input type="text" name="addItem" placeholder="Add Item" autocomplete="off">
                        <button class="btn" type="submit" name="list" value="<%=ListName %>">+</button>
                    </form>
                </div>
                </div>

                </div>
        </main>
        <script src="JS/index.js"></script>
    </body>

    </html>